.header-wrap {
  position: relative;
  width: 100%;
}
.back {
  position: absolute;
  left: 0;
  top: 0;
  transform: rotate(90deg);
}

.header-title {
  line-height: 40px;
}

.food-image {
  width: 100%;
  height: 300rpx;
}

.detail-item {
  display: flex;
  width: 100%;
  padding: 10px 0;
  font-size: 13px;
}

.detail-item + .detail-item {
  border-top: 1px solid rgba(0,0,0,.2);
}

.detail-key {
  padding: 0 5px;
  width: 100px;
}

.detail-value {
  flex: 1;
}