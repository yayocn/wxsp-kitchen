.header-wrap {
  position: relative;
  width: 100%;
}
.back {
  position: absolute;
  left: 0;
  top: 0;
  transform: rotate(90deg);
}

.header-title {
  line-height: 40px;
}

.food-image {
  width: 100%;
  height: 300rpx;
}

.details {
  font-size: 13px;
}

.console-menu {
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
}

.console-menu.btn-wrap {
  display: flex;
  overflow: hidden;
}

.console-menu button {
  flex-grow: 1;
  text-align: center;
  border-radius: 0 !important;
}

.console-menu button:after {
  border-color: transparent;
}

.menu-list {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 46px;
  left: 0;
  background-color: rgba(0,0,0,.6);
  overflow: hidden;
}

.menu-list > .box-header {
  position: absolute;
  bottom: 232px;
}

.menu-list > .box-body {
  position: absolute;
  bottom: 0;
}