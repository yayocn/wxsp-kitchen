.order-item {
  width: 100%;
  height: 100px;
}

.order-content {
  display: flex;
}

.order-food-list {
  white-space: nowrap;
  display: flex;
  flex-grow: 2;
}

.order-food {
  display: inline-block;
  position: relative;
  width: 75px;
  height: 75px;
}

.order-food + .order-food {
  margin-left: 5px;
}

.food-pic {
  display: block;
  width: 100%;
  height: 100%;
}

.food-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 12px;
  background-color: rgba(0,0,0,.6);
  color: #fff;
  text-align: center;
}

.category-handle {
  flex-grow: 1;
  margin-left: 10px;
}

.category-handle button {
  height: 75px;
  width: 40px;
  line-height: 35px;
  font-size: 12px;
}

.order-item + .order-item {
  margin-top: 20px;
}