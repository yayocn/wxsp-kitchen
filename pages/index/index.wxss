/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.entry {
  margin-top: 100rpx;
}

.entry-button {
  background-color: #36c6d3;
  background-image: linear-gradient(to top right,#fff 0,#36c6d3 50%,#fff); 
  background-repeat: repeat-x;
  color: #f5f5f5;
}

.usermotto {
  margin-top: 100px;
  font-size: 14px;
  font-family: "微软雅黑";
  color: #555;
}